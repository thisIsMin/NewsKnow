<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zhihu_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_margin"
    android:paddingTop="@dimen/item_margin"
    android:foreground="@drawable/mid_grey_ripple"
    android:stateListAnimator="@animator/raise"
    android:orientation="horizontal">
    <!--android:foreground="@drawable/mid_grey_ripple"-->

    <!--android:stateListAnimator="@animator/raise">-->

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_image_id"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_hight"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="5dp"
        android:elevation="@dimen/z_card"
        android:foreground="@drawable/mid_grey_ripple"
        android:stateListAnimator="@animator/raise" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_text_tible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:stateListAnimator="@animator/raise"
            android:textSize="12dp"
            android:textColor="@color/text_color"
            />

        <TextView
            android:id="@+id/item_text_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:stateListAnimator="@animator/raise"
            android:textSize="8dp"
            android:textColor="@color/text_color"
            />

    </LinearLayout>

</LinearLayout>